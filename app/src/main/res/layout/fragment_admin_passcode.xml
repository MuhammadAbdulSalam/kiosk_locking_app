<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/white"
    tools:context=".fragments.AdminPasscodeFragment"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_above="@id/plv_lockView"
        android:padding="10dp">
        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/ic_outline_info_24"
            android:layout_marginRight="5dp"/>
        <TextView
            android:id="@+id/tv_pattren_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:text="Please create a pattern to Unlock device"
           />
    </LinearLayout>

    <com.andrognito.patternlockview.PatternLockView
        android:id="@+id/plv_lockView"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:background="@color/light_grey"
        android:layout_centerInParent="true"
        app:correctStateColor="@color/sagoss_green"
        app:wrongStateColor="@color/sagoss_red"
        />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn_security_type_back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Back"
        style="@style/Widget.MaterialComponents.Button.TextButton"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="@dimen/bottom_button_bottom_margin"
        android:layout_marginRight="@dimen/bottom_button_bottom_margin"
        android:drawableLeft="@drawable/ic_baseline_arrow_back_24"
        />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn_pattren_next"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Next"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        style="@style/Widget.MaterialComponents.Button.TextButton"
        android:layout_marginBottom="@dimen/bottom_button_bottom_margin"
        android:layout_marginEnd="@dimen/bottom_button_bottom_margin"
        android:drawableEnd="@drawable/ic_round_arrow_forward_24"
        />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn_passcode_try_again"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Start Again"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        style="@style/Widget.MaterialComponents.Button.TextButton"
        android:layout_marginBottom="@dimen/bottom_button_bottom_margin"
        android:layout_marginEnd="@dimen/bottom_button_bottom_margin"
        />


</RelativeLayout>